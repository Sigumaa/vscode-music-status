{
  "name": "music-status",
  "displayName": "music-status",
  "description": "Display the currently playing song from Last.fm in your VSCode status bar.",
  "version": "0.0.1",
  "repository": "https://github.com/Sigumaa/vscode-music-status",
  "publisher": "shiyui",
  "license": "MIT",
  "keywords": [
    "music",
    "last.fm",
    "status bar"
  ],
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "music-status.showCurrentTrack",
        "title": "show current track"
      }
    ],
    "configuration": {
      "title": "Music Status",
      "properties": {
        "music-status.apiKey": {
          "type": "string",
          "default": "",
          "description": "Last.fm API key"
        },
        "music-status.user": {
          "type": "string",
          "default": "",
          "description": "Last.fm username"
        },
        "music-status.refreshInterval": {
          "type": "number",
          "default": 30000,
          "description": "Refresh interval in milliseconds"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.6.7"
  }
}
